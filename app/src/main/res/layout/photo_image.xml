<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@drawable/login_background"> <!-- Optional: Add a background drawable -->

    <!-- ImageView for the shoe photo -->
    <ImageView
        android:id="@+id/shoe_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:contentDescription="@string/app_name" />

    <!-- TextView for the shoe name -->
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/shoe_photo"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <!-- TextView for the shoe brand -->
    <TextView
        android:id="@+id/brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_toEndOf="@id/shoe_photo"
        android:layout_marginStart="8dp"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray" />

    <!-- TextView for the shoe price -->
    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/brand"

        android:layout_marginStart="8dp"
        android:textSize="16sp"
        android:textColor="@android:color/holo_green_dark" />

</RelativeLayout>
